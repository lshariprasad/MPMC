PROGRAM: 

MOV DX, 00H
MOV SI, 1250H
MOV CX, 03H
MOV AX, [SI]
A1: INC SI
INC SI
ADD AX, [SI]
JNC NEXT
INC DX
NEXT:
LOOP A1
INC SI
INC SI
MOV [1300H], AX
MOV [1302H], DX
HLT

OUTPUT
      INPUT            OUTPUT
Address    Data  Address    Data  
1250       ABCD  1300       0B64  
1252       EF98  1302       0003 
1254       DCBA
1256       9345
